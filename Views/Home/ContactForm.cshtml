@model CarManager.Models.ContactFormViewModel

@using (Html.BeginForm("ContactForm", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Forma kontaktowa</h4>

        <!--Imię-->
        <div class="form-group">
            @Html.LabelFor(c => c.FirstName)
            <div class="col-md-10">
                @Html.EditorFor(c => c.FirstName)
            </div>
        </div>

        <!--Nazwisko-->
        <div class="form-group">
            @Html.LabelFor(c => c.LastName)
            <div class="col-md-10">
                @Html.EditorFor(c => c.LastName)
            </div>
        </div>

        <!--Opis-->
        <div class="form-group">
            @Html.LabelFor(c => c.Description)
            <div class="col-md-10">
                @Html.EditorFor(c => c.Description)
            </div>
        </div>


        <input type="submit" value="Wyślij" class="btn btn-success" />

    </div>


}


